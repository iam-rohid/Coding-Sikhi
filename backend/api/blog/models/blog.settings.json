{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "blog"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 100,
      "minLength": 10,
      "unique": false,
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "excerpt": {
      "type": "text",
      "required": false,
      "maxLength": 300
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "categories": {
      "via": "blogs",
      "collection": "category"
    }
  }
}
